script(type='text/ng-template', id='error.html')
    .row
        .top-lg-sep
            .common-header-label.text-center Error
        .top-lg-sep.notification-text {{config.shortMessage}}

    .text-center.md-margin(ng-if="config.showMore") {{config.longMessage}}
    .text-center.md-margin(ng-if="config.longMessage")
        a.pointer(ng-click="config.showMore = !config.showMore") {{'Show ' + (config.showMore ? 'Less' : 'More') }}
    .text-center.bottom-lg-sep.top-lg-sep.notification-button
        .clearfix.bottom-sm-sep
            button.common-btn.btn.btn-primary.btn-lg(ng-click="dismiss()") Close
script(type='text/ng-template', id='login.html')
    .container-fluid.welcome
        .container-fluid-wrapper.container-fluid-wrapper-signin                
            .form-wrapper
                .sign-in-icon-container.clearfix
                    .sign-in-image.login
                        img.popup(src= "assets/images/signin.png")
                form(name="authenticate" ng-submit="login()")
                    .form-group
                        label(for="usr") {{loginPopupObj.userID}}
                        div(class='username-container')
                            input(class="form-control input-box-style" id="usr" placeholder="Enter your {{loginPopupObj.userID}}" ng-model="loginPopupObj.username" required)
                            div(class='username-addon' ng-if="loginPopupObj.authType == 'ldap1900'") {{domainName}}
                            div.username-error(ng-show='loginPopupObj.authType == "ldap1900" && loginPopupObj.usernameInvalid && loginPopupObj.username.length > 0') Please enter Email Id without domain name
                    .form-group.extra-margin-actions
                        label(for="pwd") Password
                        //- span.input-clipper

                        input(type="password" class="form-control input-box-style" id="pwd" placeholder="Enter your Password" ng-model="loginPopupObj.password" autocomplete="new-password" required)

                    .button-container
                        button.btn.btn-primary.btn-lg.login-button(type="submit") Login

                .center-text.forgot-pwd
                    a.link-style(href='{{loginPopupObj.forgotPasswordLink}}' target="_blank" ng-if="!!loginPopupObj.forgotPasswordLink") Forgot Password?

.container-fluid.sign-in
